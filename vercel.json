{
  "builds": [
    {
      "src": "api/products.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/admin/products.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/testimonials.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/cart.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/cart-items.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/checkout.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/send-download-email.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/**",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run build",
        "outputDirectory": "dist/public"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/products/([^/]+)",
      "dest": "/api/products?id=$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
