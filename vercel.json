{
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "rewrites": [
    {
      "source": "/api/products/([^/]+)",
      "destination": "/api/products?id=$1"
    },
    {
      "source": "/(.*)",
      "destination": "/$1"
    }
  ]
}
